vcpkg_from_github(
  OUT_SOURCE_PATH SOURCE_PATH
  REPO onbings/bofwebrpc
  REF 3a3ea13afd1e65540c0c141b596232f138c6d0ee
  SHA512 d7c5eb3a88a455b9649f199edf7074c70e3f165fa4ab90e5962cd48b79d6b3ceee48571c27e55074d6e82d0101a99601f5eb1c617b968ca8187431965797f6b2
